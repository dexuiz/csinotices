<html>
<head>
  <title>
    new
  </title>
  <link rel="stylesheet" href="/stylesheets/index.css" type="text/css"></link>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.css" type="text/css">
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.js"></script>

</head>
<body>

  <div class="ui top fixed menu" id="navbar">
  <div class="item">
    <img src="http://www.confidis.co/wp-content/uploads/2016/07/csi-logo.png">
  </div>
  <a class="item">CSI NOTICES</a>
  
  </div>

  <div class="ui main text container" id="container">
    <div class="ui container">
      <h2 class="ui center aligned header">
        Add a new notice
      </h2>
      <div class="ui very padded segment">
        <form action="/admin/new" method="post" class="ui large form">
          <div class="field ">
            <label>Name</label>
            <input type="text" name="notice[name]" placeholder="Header">
          </div>
          <div class="field ">
            <label>Body</label>
            <textarea name="notice[body]" placeholder="body of the notice" rows="7"></textarea>
          </div>
          <button class="ui button  left floated" type="submit">submit <i class="icon arrow right" style="margin-left:10px;"></i></button>
          <div class="ui error message"></div>
        </form>
      </div>
    </div>
  </div>

  <div class="ui inverted vertical footer segment" id="footer">
    <p>WEBSITE DESIGNED AND DEVELOPED BY DEVAL .CSI 2017-2018</p>
  </div>
</body>
<script type="text/javascript" charset="utf-8">
$('.ui.form')
.form({
  fields: {
    notice[name]: 'empty',
    notice[body]   :['empty','minLength[8]']
  }
})
;

</script>
</html>
